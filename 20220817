file_name = 'text_files/programming.txt'

with open(file_name, 'a') as file_object:
    file_object.write("I also love...\n")
    file_object.write("I love...\n")
# the 'a' means append, and can be change into 'w'(write)


#division calculater
try:
    print(5/0)
except ZeroDivisionError:
    print("You cant divide by zero!")


#how to deal with error
print("give me two number to divide")
print("Enter q to quit")
while True:
    first_number = input(''\nfirstnumber")
    if first_number == 'q':
        break
    second_number = input("secondnumber")
    if second_number == 'q':
        break
    try:
        answer = int(first_number / int(second_number)
    except ZeroDivisionError:
           print("you cant divide by zero")
    else:
         print(answer)
